<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/darkoffwhite"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meal_img"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_weight="6"
            android:elevation="20dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@drawable/mightyzinger" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <TextView
                android:id="@+id/meal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meal_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/meal_title"
                android:layout_alignStart="@id/meal_title"
                android:layout_alignEnd="@id/meal_title"
                android:layout_centerVertical="true"
                android:text="@string/details"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/meal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button"
                android:layout_below="@+id/meal_data"
                android:layout_alignEnd="@+id/button"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/price"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meal_EGP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/meal_price"
                android:layout_alignBottom="@id/meal_price"
                android:layout_marginEnd="6dp"
                android:layout_toStartOf="@+id/meal_price"
                android:gravity="center"
                android:text="@string/EGP"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/meal_data"
                android:layout_alignEnd="@+id/meal_title"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/yellow"
                android:text="@string/add_to_cart"
                android:textColor="@color/offwhite"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>